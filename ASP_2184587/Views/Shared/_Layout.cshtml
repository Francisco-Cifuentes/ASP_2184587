<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DOCX</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/css.css"/>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("DOCX", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav nav-pills">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Usuario", "Index", "Usuario")</li>
                        <li>@Html.ActionLink("Cliente", "Index", "Cliente")</li>
                        <li>@Html.ActionLink("Proveedor", "Index", "Proveedor")</li>
                        <li>@Html.ActionLink("Producto", "Index", "Producto")</li>
                        <li>@Html.ActionLink("Compras", "Index", "Compra")</li>
                        <li>@Html.ActionLink("Reporte", "Reporte", "Producto")</li>
                        <li>@Html.ActionLink("Producto Compra", "Index", "ProductoCompra")</li>
                        <li>@Html.ActionLink("Cerrar Sesion", "Logout", "Usuario", new { area = "" }, new { @class = "" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                        <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                        <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Iniciar Sesion", "Login", "Usuario")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer">
            @RenderSection("infoFooter",required:false)
            <p class="P_Footer">&copy; @DateTime.Now.Year - DOCX |
            <a href="https://github.com/Francisco-Cifuentes/ASP_218458" target="_blank">Repositorio GitHub </a>|
            <a href="mailto:facifuentes04@misena.edu.co" target="_blank">Gmail SENA</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
