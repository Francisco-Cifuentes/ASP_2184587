@model ASP_2184587.Models.usuario

@{
    ViewBag.Title = "Detalles de Usuario";
}

<h2>Detalles de Usuario</h2>
<p>En este formulario se pueden visualizar los datos especificos del usuario seleccionado.</p>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            Apellido
        </dt>

        <dd>
            @Html.DisplayFor(model => model.apellido)
        </dd>

        <dt>
            Fecha de Nacimiento
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha_nacimiento)
        </dd>

        <dt>
            Correo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            Contraseña
        </dt>

        <dd>
            @Html.DisplayFor(model => model.password)
        </dd>

    </dl>
</div>
<p>
    <div>
        @Html.ActionLink("Editar", "Edit", new { id = Model.id }, new { @class = "btn btn-default", @role = "button" }) 
        @Html.ActionLink("Regresar a la Lista", "Index", "", new { @class = "btn btn-default", @role = "button" })
    </div>
</p>
