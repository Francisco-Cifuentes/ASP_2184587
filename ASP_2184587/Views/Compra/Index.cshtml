@model IEnumerable<ASP_2184587.Models.compra>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Compras</h2>
<p>Listado de Compras registrado en el Sistema de Informacion.</p>

<p>
    @Html.ActionLink("Crear Compra", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha
        </th>
        <th>
            Total Compra
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿Esta seguro de eliminar ?')) {
                event.preventDefault();
            }
        })
    </script>
}
