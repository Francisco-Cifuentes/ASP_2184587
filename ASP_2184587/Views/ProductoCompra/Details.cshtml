@model ASP_2184587.Models.producto_compra

@{
    ViewBag.Title = "Detalles de Producto Compra";
}

<h2>Detalles de Compra Producto</h2>
<p>En este formulario se pueden visualizar los datos especificos de la Compra Producto seleccionado.</p>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            ID Compra
        </dt>

        <dd>
            @Html.DisplayFor(model => model.id_compra)
        </dd>

        <dt>
            Nombre del Producto
        </dt>

        <dd>
            @ASP_2184587.Controllers.ProductoCompraController.NombreProducto(Model.id_producto)
        </dd>

        <dt>
            Cantidad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Regresar a la lista", "Index")
</p>
